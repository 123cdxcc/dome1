<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SdkzFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="-5dp"
            android:background="@drawable/border_lines"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="手动控制页面"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="风扇"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_lines"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="当前状态：" />

                            <TextView
                                android:id="@+id/f_sdkz_text_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="关闭" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/f_sdkz_img_1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_sdkz_fsg" />

                        <Switch
                            android:id="@+id/f_sdkz_swh_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="开启"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="荧光灯"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_lines"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="当前状态：" />

                            <TextView
                                android:id="@+id/f_sdkz_text_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="关闭" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/f_sdkz_img_2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_sdkz_ygd" />

                        <Switch
                            android:id="@+id/f_sdkz_swh_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="打开" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="水泵"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_lines"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="当前状态：" />

                            <TextView
                                android:id="@+id/f_sdkz_text_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="关闭" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/f_sdkz_img_3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_sdkz_syt" />

                        <Switch
                            android:id="@+id/f_sdkz_swh_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="打开" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="蜂鸣报警器"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_lines"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:paddingVertical="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="当前状态：" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/f_sdkz_text_4"
                                android:text="关闭" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/f_sdkz_img_4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_sdkz_fmq" />

                        <Switch
                            android:id="@+id/f_sdkz_swh_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="打开" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>